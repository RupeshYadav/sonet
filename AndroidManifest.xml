<manifest xmlns:android="http://schemas.android.com/apk/res/android"
	package="com.piusvelte.sonet" android:versionCode="20"
	android:versionName="0.2.0" android:installLocation="auto">
	<application android:icon="@drawable/icon" android:label="@string/app_name">
		<activity android:name=".UI" android:label="@string/app_name">
			<intent-filter>
				<action android:name="android.appwidget.action.APPWIDGET_CONFIGURE" />
			</intent-filter>
			<intent-filter>
				<action android:name="android.intent.action.MAIN" />
				<category android:name="android.intent.category.LAUNCHER" />
			</intent-filter>
		</activity>
		<activity android:name=".ManageAccounts" android:launchMode="singleInstance">
			<intent-filter>
				<action android:name="android.intent.action.VIEW"></action>
				<category android:name="android.intent.category.DEFAULT"></category>
				<category android:name="android.intent.category.BROWSABLE"></category>
				<data android:scheme="sonet" android:host="oauth"></data>
			</intent-filter>
		</activity>
		<activity android:name=".Settings" />
		<!-- Broadcast Receiver that will process AppWidget updates -->
		<receiver android:name=".SonetWidget_4x2" android:label="@string/sonet_4x2">
			<intent-filter>
				<action android:name="android.appwidget.action.APPWIDGET_UPDATE" />
			</intent-filter>
			<intent-filter>
				<action android:name="com.piusvelte.Intent.REFRESH" />
			</intent-filter>
			<meta-data android:name="android.appwidget.provider"
				android:resource="@xml/widget_4x2" />
		</receiver>
		<receiver android:name=".SonetWidget_4x3" android:label="@string/sonet_4x3">
			<intent-filter>
				<action android:name="android.appwidget.action.APPWIDGET_UPDATE" />
			</intent-filter>
			<intent-filter>
				<action android:name="com.piusvelte.Intent.REFRESH" />
			</intent-filter>
            <meta-data android:name="android.appwidget.provider" android:resource="@xml/widget_4x3" />
        </receiver>
        <receiver android:name=".SonetWidget_4x4" android:label="@string/sonet_4x4">
            <intent-filter>
                <action android:name="android.appwidget.action.APPWIDGET_UPDATE" />
            </intent-filter>
			<intent-filter>
				<action android:name="com.piusvelte.Intent.REFRESH" />
			</intent-filter>
            <meta-data android:name="android.appwidget.provider" android:resource="@xml/widget_4x4" />
        </receiver>
        <service android:name=".SonetService" />
    </application>
    
    <uses-permission android:name="android.permission.RECEIVE_BOOT_COMPLETED" />
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />
    <uses-permission android:name="android.permission.INTERNET" />
    <uses-sdk android:minSdkVersion="6" />

</manifest> 